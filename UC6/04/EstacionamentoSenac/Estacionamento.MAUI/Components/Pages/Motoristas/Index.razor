@page "/motoristas"
@using Estacionamento.MAUI.Models
@inject HttpClient Http;

<h3>Lista de Motoristas</h3>

<a href="/veiculos/create" class="btn btn-info">Cadastrar</a>

@if (motoristas == null)
{
    <h1>NÃO TEM MOTORISTAS AINDA!!!</h1>
}
else if (motoristas.Count == 0)
{
    <h2>Não há motoristas cadastrados!</h2>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Marca</th>
                <th scope="col">Modelo</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var motorista in motoristas)
            {
                <tr>
                    <td>@motorista.Id</td>
                    <td>@motorista.Nome</td>
                    <td>@motorista.VeiculoId</td>
                    <td>
                        <a href="#" class="btn btn-warning">Editar</a>
                        <a href="/motoristas/Details/@motorista.Id" class="btn btn-info">Detalhes</a>
                        <a href="#" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    List<Motorista>? motoristas;

    protected override async Task OnInitializedAsync()
    {
        motoristas = await Http.GetFromJsonAsync<List<Motorista>>("https://localhost:4000/api/Motoristas");
    }
}
